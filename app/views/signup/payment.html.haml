.container
  .header
    %h1.header__logo
      %a.header__logo__link{:href => "https://www.mercari.com/jp/"}
        %img.header__logo__link--image{:alt => "mercari", :src => "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?465897195"}/
    %nav.header__signup-progress
      %ol.header__signup-progress__list.clearfix
        %li.header__signup-progress__list__button.header__signup-progress__list__button--status-through
          会員情報
          .header__signup-progress__list__button--progress-status.header__signup-progress__list__button--status-through--progress-status
        %li.header__signup-progress__list__button.header__signup-progress__list__button--status-through
          電話番号認証
          .header__signup-progress__list__button--progress-status.header__signup-progress__list__button--status-through--progress-status
        %li.header__signup-progress__list__button.header__signup-progress__list__button--status-through
          お届け先住所入力
          .header__signup-progress__list__button--progress-status.header__signup-progress__list__button--status-through--progress-status
        %li.header__signup-progress__list__button.header__signup-progress__list__button--status-active
          支払い方法
          .header__signup-progress__list__button--progress-status.header__signup-progress__list__button--status-active--progress-status
        %li.header__signup-progress__list__button
          完了
          .header__signup-progress__list__button--progress-status
  .main
    .main__container
      %h2.main__container__heading クレジットカード情報入力
      = form_with model:@user, url: signup_index_path, method: :post,local: true, html: {id:"add-card-form", class: 'main__container__form'} do |f|
        .main__container__form__content
          .main__container__form__content__group
            = f.label :payment_card_no, "カード番号", {class:"main__container__form__content__group--label"}
            %span.main__container__form__content__group--require 必須
            = f.number_field :payment_card_no, {id:"payment_card_no",class:"main__container__form__content__group--input-default","data-input-type": "card",maxlength: "19", placeholder: "半角数字のみ"}
            %ul#card-no-error-wrapper.has-error-text
            %ul.main__container__form__content__group__cards
              %li.main__container__form__content__group__cards--list
                %img{:alt => "", :height => "20", :src => "//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?465897195", :width => "49"}/
              %li.main__container__form__content__group__cards--list
                %img{:alt => "", :height => "20", :src => "//www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?465897195", :width => "34"}/
              %li.main__container__form__content__group__cards--list
                %img{:alt => "", :height => "20", :src => "//www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?465897195", :width => "30"}/
              %li.main__container__form__content__group__cards--list
                %img{:alt => "", :height => "20", :src => "//www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?465897195", :width => "32"}/
              %li.main__container__form__content__group__cards--list
                %img{:alt => "", :height => "20", :src => "//www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?465897195", :width => "21"}/
              %li.main__container__form__content__group__cards--list
                %img{:alt => "", :height => "20", :src => "//www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?465897195", :width => "32"}/
              %li.main__container__form__content__group__cards--list
                %img{:alt => "", :height => "20", :src => "//www-mercari-jp.akamaized.net/assets/img/card/discover.svg?465897195", :width => "32"}/
          .main__container__form__content__group
            = f.label :payment_card_expire, "有効期限", {class:"main__container__form__content__group--label"}
            %span.main__container__form__content__group--require 必須
            %br/
            .main__container__form__content__group--select.main__container__form__content__group--select--half
              %select#payment_card_expire_mm.main__container__form__content__group--select--default
                %option{:value => "01"} 01
                %option{:value => "02"} 02
                %option{:value => "03"} 03
                %option{:value => "04"} 04
                %option{:value => "05"} 05
                %option{:value => "06"} 06
                %option{:value => "07"} 07
                %option{:value => "08"} 08
                %option{:value => "09"} 09
                %option{:value => "10"} 10
                %option{:value => "11"} 11
                %option{:value => "12"} 12
              %i.icon-arrow-bottom
              %span 月
            .main__container__form__content__group--select.main__container__form__content__group--select--half
              %select#payment_card_expire_yy.main__container__form__content__group--select--default
                %option{:value => "19"} 19
                %option{:value => "20"} 20
                %option{:value => "21"} 21
                %option{:value => "22"} 22
                %option{:value => "23"} 23
                %option{:value => "24"} 24
                %option{:value => "25"} 25
                %option{:value => "26"} 26
                %option{:value => "27"} 27
                %option{:value => "28"} 28
                %option{:value => "29"} 29
              %i.icon-arrow-bottom
              %span 年
            %ul#expire-mm-error-wrapper.has-error-text
            %ul#expire-yy-error-wrapper.has-error-text
          .main__container__form__content__group
            = f.label :payment_card_security_code, "セキュリティコード", {class:"main__container__form__content__group--label"}
            %span.main__container__form__content__group--require 必須
            = f.number_field :payment_card_no, {id:"payment_card_security_code",class:"main__container__form__content__group--input-default","data-input-type": "card",maxlength: "4", placeholder: "カード背面4桁もしくは3桁の番号"}
            %ul#security-code-error-wrapper.has-error-text
            .main__container__form__content__group--seqcode
              .main__container__form__content__group--seqcode--text{"data-js": "show-tips-toggle"}
                %span.question> ?
                カード裏面の番号とは？
              .main__container__form__content__group--seqcode--info{"data-js": "show-tips-content"}
                カードの裏面をご参照ください。
                %br/
                %img{:alt => "", :src => "//www-mercari-jp.akamaized.net/assets/img/signup/seq-card.png?465897195", :width => "240"}/
          %input#user_id{name: "user_id",type: "hidden",value: "809473232"}/
          %input#encrypted_card_data{name:"encrypted_card_data",type: "hidden"}/
          %p#primary-error.has-error-text
          %input{name:"after_save_callback",type: "hidden",value: ""}/
          = f.submit "追加する", {id:"submit-button",class:"main__container__form__content__group--button btn-red"}
        -# %script{:async => "", :src => "https://p01.mul-pay.jp/ext/js/token.js"}
        -# %script{:async => "", :src => "//www-mercari-jp.akamaized.net/assets/js/get_gmopg_card_token.js?1815805199"}
  .footer
    %nav.footer__policies
      %ul.clearfix
        %li.footer__policies__list
          %a.footer__policies__list--link{href: "https://www.mercari.com/jp/privacy/"} プライバシーポリシー
        %li.footer__policies__list
          %a.footer__policies__list--link{href: "https://www.mercari.com/jp/tos/"} メルカリ利用規約
        %li.footer__policies__list
          %a.footer__policies__list--link{href: "https://www.mercari.com/jp/tokutei/"} 特定商取引に関する表記
    %a.footer__logo{href: "https://www.mercari.com/jp/"}
      %img{alt: "mercari",height: "65",src: "//www-mercari-jp.akamaized.net/assets/img/common/common/logo-gray.svg?465897195",width: "80"}/
    %p.footer__copyrights
      %small.footer__copyrights--small © 2019 Mercari